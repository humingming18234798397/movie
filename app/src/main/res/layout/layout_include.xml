<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/include_relate"
    android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/include_img"
            android:layout_width="@dimen/dp_168"
            android:layout_height="@dimen/dp_168"
            android:layout_centerInParent="true"
            android:background="@drawable/wuguanzhu"
            />
        <TextView
            android:id="@+id/include_text"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="14sp"
            android:textColor="@color/bai"
            android:text="暂无关注信息"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/include_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>
