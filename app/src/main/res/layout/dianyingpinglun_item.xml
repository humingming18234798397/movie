<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/blue"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_231">
        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_120">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dianying_img"
            android:layout_margin="@dimen/dp_10"
            fresco:placeholderImage="@drawable/zhanweitu"
            fresco:failureImage="@drawable/cuowutu"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_101" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_101">
            <TextView
                android:id="@+id/dianying_name"
                android:textSize="@dimen/sp_14"
                android:textColor="#fff"
                android:text="悲伤逆流成河"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="@dimen/dp_148"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_17">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="导演"
                    />
                <TextView
                    android:id="@+id/dianying_daoyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="导演"
                    />
            </LinearLayout>
           <LinearLayout
               android:layout_width="@dimen/dp_148"
               android:layout_marginTop="@dimen/dp_5"
               android:layout_height="@dimen/dp_17">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:textColor="#fff"
                   android:text="主演"
                   />
               <TextView
                   android:id="@+id/dianying_zhuyan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:textColor="#fff"
                   android:text="主演"
                   android:layout_marginLeft="@dimen/dp_10"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="@dimen/dp_148"
               android:layout_marginTop="@dimen/dp_5"
               android:layout_height="@dimen/dp_17">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_12"
                   android:textColor="#fff"
                   android:text="评分"

                   />
               <TextView
                   android:layout_marginLeft="@dimen/dp_10"
                   android:id="@+id/dianying_pingfen"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_12"
                   android:textColor="#fff"
                   android:text="评分"
                   />
           </LinearLayout>

        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="________________________________________"

            android:textColor="@color/shenblue"
            />
        <TextView
            android:text="我的评论"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/bai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dingying_pinglun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <RatingBar
                   style="@style/Widget.AppCompat.RatingBar.Small"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:progressTint="#e8185e"
                   android:progressBackgroundTint="#fff"
                   android:id="@+id/rat_filmcinecism"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:numStars="5" />

               <TextView
                   android:id="@+id/yingping_fenshu"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:textColor="#fff"
                   android:textSize="12sp"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_centerVertical="true"
                   />
               <TextView
                   android:id="@+id/dianuing_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:textColor="#fff"
                   android:text="04－24  09:15"
                   android:layout_marginLeft="@dimen/dp_80"
                   android:layout_marginTop="@dimen/dp_10"
                   />

           </LinearLayout>
    </LinearLayout>

</LinearLayout>
