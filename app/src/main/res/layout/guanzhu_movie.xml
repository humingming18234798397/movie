<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/shenblue"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/movie_linear"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/guanzhu_movie_rlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>

<RelativeLayout
    android:id="@+id/movie_relat"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simoledrawee_view"
        android:layout_width="@dimen/dp_168"
        android:layout_height="@dimen/dp_168"
        android:layout_centerInParent="true"
        android:background="@drawable/wuguanzhu"
        />
<TextView
    android:layout_marginTop="@dimen/dp_40"
    android:textSize="14sp"
    android:textColor="@color/bai"
    android:text="暂无关注信息"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/simoledrawee_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</RelativeLayout>
</LinearLayout>
