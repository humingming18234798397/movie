<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/shenblue"
    android:layout_height="match_parent"
    tools:context=".activity.XuanZuoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_200"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/xuanzuo_fanhui"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="@drawable/back"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_24"
                />

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/imgseactseat"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_200" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/xuanzuo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#fff"
                android:text="复仇者联盟4:终局之战"
                />
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/xuanzuo_name"
                android:layout_marginRight="@dimen/dp_59"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="时长"
                    android:layout_marginTop="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/xuanzuo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="182分钟"
                    android:layout_marginTop="@dimen/dp_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/linear1"
                android:layout_below="@id/xuanzuo_name"
                android:layout_marginRight="@dimen/dp_59"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="评分"
                    android:layout_marginTop="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/xuanzuo_fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="8.9分"
                    android:layout_marginTop="@dimen/dp_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/linear2"
                android:layout_below="@id/xuanzuo_name"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="导演"
                    android:layout_marginTop="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/xuanzuo_daoyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="安东尼•罗素   乔•罗素"
                    android:layout_marginTop="@dimen/dp_5"
                    />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xuanzuo_quyu"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingLeft="@dimen/dp_24"
                android:text="海淀区"
                android:textSize="@dimen/sp_14"
                android:textColor="#fff"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/xuanzuo_shijian"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_50"
                android:textSize="@dimen/sp_14"
                android:text="日期"
                android:textColor="#fff" />

            <RadioButton
                android:id="@+id/xuanzuo_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_44"
                android:button="@null"
                android:paddingLeft="@dimen/dp_60"
                android:text="价格最低"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_seatsesrach"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/icon_shoushuo"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_24"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/xuanzuo_rlv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
            <include layout="@layout/layout_include"
                android:visibility="gone"
                />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>