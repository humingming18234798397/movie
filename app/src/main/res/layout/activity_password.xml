<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/shenblue"
    tools:context=".activity.PasswordActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_24"
            android:id="@+id/shezhi_fanhui"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/shapeback"
            />
        <TextView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_22"
            android:text="重置密码"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_120"
            android:textColor="#d8d8d8"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/blue"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_14"
            android:text="我的密码"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pwd_oldpwd"
            android:textSize="@dimen/sp_12"
            android:hint="请输入原密码"
            android:background="@null"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_180"
            android:textColor="#b8b8b8"
            android:singleLine="true"
            android:textColorHint="#b8b8b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_14"
            android:text="设置新密码"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pwd_newpwd"
            android:textSize="@dimen/sp_12"
            android:hint="请输入新密码"
            android:background="@null"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_166"
            android:textColor="#b8b8b8"
            android:singleLine="true"
            android:textColorHint="#b8b8b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_14"
            android:text="确认新密码"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pwd_newpwd2"
            android:textSize="@dimen/sp_12"
            android:hint="请再次输入密码"
            android:background="@null"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_166"
            android:textColor="#b8b8b8"
            android:singleLine="true"
            android:textColorHint="#b8b8b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<Button
    android:id="@+id/pwd_buttton"
    android:layout_width="@dimen/dp_300"
    android:layout_height="@dimen/dp_36"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dp_336"
    android:textColor="@color/bai"
    android:textSize="@dimen/sp_14"
    android:text="确定"
    android:background="@drawable/button_shape"
    />
</LinearLayout>