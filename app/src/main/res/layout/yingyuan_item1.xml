<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/relative"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_90"
        android:background="@color/blue"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10sp"
        >
<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/yingyuan_item1_img"
    android:layout_marginTop="10dp"
    fresco:placeholderImage="@drawable/zhanweitu"
    fresco:failureImage="@drawable/cuowutu"
    android:layout_marginLeft="10dp"
    android:layout_width="70dp"
    android:layout_height="70dp" />
<TextView
    android:id="@+id/yingyuan_item1_name"
    android:layout_toRightOf="@+id/yingyuan_item1_img"
    android:textColor="@color/bai"
    android:textSize="14sp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/yingyuan_item1_dizhi"
        android:layout_toRightOf="@+id/yingyuan_item1_img"
        android:textColor="@color/bai"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/yingyuan_item1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/yingyuan_item1_juli"
        android:textColor="@color/bai"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/yingyuan_item1_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
