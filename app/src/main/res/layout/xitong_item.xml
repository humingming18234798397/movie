<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="@dimen/dp_315"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/shenblue"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_height="@dimen/dp_75">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:text="提醒消息"
            android:id="@+id/xitong_name"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="#fff"
            android:text="4-22 13:01"
            android:id="@+id/xitong_time"
            android:layout_marginLeft="@dimen/dp_146"
            android:layout_marginTop="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="检测到有新版本，立即更新"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:id="@+id/xitong_message"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>