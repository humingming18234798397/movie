<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/bai</item>
        <item name="android:textColor">@color/bai</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/login_shape</item>
    </style>

    <style name="button">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bai</item>
    </style>

    <style name="radioGroup">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/bai</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="MyTabLayoutTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
